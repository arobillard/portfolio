---
import Icon from "../components/Icon/Icon.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout pageTitle="Page Not Found">
  <header class="not-found">
    <h1>Sorry, page not found.</h1>
    <p>It looks like the page you are looking for does not exist.</p>
    <Icon
      icon="arrow-right"
      class="bold"
      link="/"
      label="Return home"
      ratio="100 / 65"
      labelPos="left"
      size="1.25em"
      hoverShift={true}
      fontSize="var(--type-scale-h5)"
    />
  </header>
</BaseLayout>

<style>
  .not-found {
    padding-block: var(--section-padding-block);
  }
</style>
