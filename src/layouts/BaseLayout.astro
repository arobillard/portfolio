---
import '../styles/global.css';
import '../styles/type.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import ScreenSizeDisplay from '../components/ScreenSizeDisplay.astro';

const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <title>{pageTitle && `${pageTitle} | `} Adam Robillard</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wdth,wght,YTLC@0,6..12,75..125,200..1000,440..540;1,6..12,75..125,200..1000,440..540&display=swap"
      rel="stylesheet"
    />
  </head>
  <body style="--color-highlight: hsl(95, 38%, 62%);">
    <div class="grid-layout">
      <Navbar />

      <main id="main">
        <slot />
      </main>

      <Footer extra="Hey there my good chums!" />
    </div>

    <ScreenSizeDisplay />

    <script>
      import '../scripts/dev-mode';
      import '../scripts/highlight-color';
      import '../scripts/toggle';
    </script>
  </body>
</html>
