---
import {
  applyClasses,
  applyClassesConditional,
} from "../../../scripts/helpers";
import SectionContent from "../SectionContent/SectionContent.astro";

const { section } = Astro.props;

const { pre_title, title, content, img, classes } = section;

const sectionClasses = ["section", "call-out"];
---

<section class={applyClasses(sectionClasses, classes)}>
  <div class="border-line border-line--top"></div>
  <div class="border-line border-line--right"></div>
  <div class="border-line border-line--bottom"></div>
  <div class="border-line border-line--left"></div>
  <SectionContent pre_title={pre_title} title={title} content={content} />
</section>

<style>
  @import "./call-out.css";
</style>

<script>
  import "./call-out";
</script>
